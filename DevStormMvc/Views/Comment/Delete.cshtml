@model DevStormMvc.Models.CommentModel

@{
    ViewBag.Title = "Delete";
}
<div class="container">
    <div class="gap gap-small"></div>
    <div class="row row-col-gap">
        <div class="text-center">

            <h1>Are you sure you want to delete this comment ?</h1>

            <hr />
            <div class="_box-highlight">
                <div class="gap gap-small"></div>
                <h3>Comment Date : @Html.DisplayFor(model => model.date)</h3>
                <h3>Text : @Html.DisplayFor(model => model.text)</h3>
            </div>

                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color"><div class="gap gap-small"></div>
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        @Html.ActionLink("Back to List", "Index", "", htmlAttributes: new { @class = "btn btn-warning", @type = "submit" })
                        <div class="gap gap-small"></div>
                    </div>
                }
            </div>

    </div>
</div>
